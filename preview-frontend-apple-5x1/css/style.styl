/*
	Estilo de la barra superior de la pagina web
*/
.top-bar
	background white
	height 56px
	display block
	border-bottom 1px solid border-color
	width 100%
	position fixed 
	z-index 3000
	top 0px
	& .wrapper
		white-space nowrap
		position: relative
		max-width maxWidthBody
		box-sizing(border-box)
		height 56px
		padding 0px 13px
		margin 0px auto
		border-left 1px solid border-color
		border-right 1px solid border-color
		& .logo 
			background url('../images/apple5x1-logo.jpg')
			background-size 100% 100%
			display inline-block
			vertical-align top
			margin 8px 0px
			padding 0px
			font-size 0px
			width 161px
			height 37px
		& .menu 
			display inline-block
			vertical-align top
			margin 0px 0px
			& ul
				padding 0px
				margin 0px
				list-style none
				& li 
					cursor pointer
					display inline-block
					margin 0px 10px
					height 56px
					line-height 56px
					& a 
						display block
						color blue5x1-color
						text-decoration none
						 text-transform uppercase
		& .button
			position absolute
			background white
			width 56px
			height 56px
			display inline-block
			border-left 1px solid border-color
			text-align center
			font-size 2em
			line-height 56px
			&:hover
				background blue5x1-color
				color white
				cursor pointer
		& .button-search 
			right: 0px
		& .button-profile 
			right: 56px
		& .button-menu 
			display none
			right: 0px
			text-align left
			&:hover
				& .menu-lines
					background white
					&:before
						background white
					&:after
						background white
			&:hover
				& .menu-x
					&:before
						background white
					&:after
						background white
									
			& .menu-lines
				position: relative
				top 40%
				display block
				width 60%
				margin 3px auto
				height altoBarras
				background black
				-webkit-transition all .3s ease
				transition all .3s ease
				&:before
					content ''
					position absolute
					top (distantciaBarras)*(-1)
					height 100%
					width 100%
					background black
					-webkit-transition all .3s ease
					transition all .3s ease
				&:after
					content ''
					position absolute
					top distantciaBarras
					height 100%
					width 100%
					background black
					-webkit-transition all .3s ease
					transition all .3s ease
					
			& .menu-x
				position: relative
				top 40%
				display block
				width 60%
				margin 3px auto
				height altoBarras
				&:before
					content ''
					position absolute
					top 0px
					height 100%
					width 100%
					background black
					-webkit-transform rotate(43deg)
					transform rotate(43deg)
					transition all .3s ease
					-webkit-transition all .3s ease
				&:after
					content ''
					position absolute
					top 0px
					height 100%
					width 100%
					background black
					-webkit-transform rotate(-43deg)
					transform rotate(-43deg)
					transition all .3s ease
					-webkit-transition all .3s ease

@media screen and (max-width:890px)
	.top-bar .wrapper .button-search
		display none
		position absolute
		top 57px
		z-index 301
			
	.top-bar .wrapper .button-profile
		display none
		position absolute
		top 57px
		z-index 301

	.top-bar .wrapper .button-menu 
