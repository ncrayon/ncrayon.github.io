/*
  estilo del widget de los videos de youtube
*/
.wrapper-videos-youtube	
	& .tab
		cursor pointer
		display block
		text-decoration none
		height 50px
		box-sizing(border-box)
		text-align center
		position relative
		& .indicator
			left 0px
			position absolute
			top 11px
			transition(all,.4s)
			&:before
				position absolute
			    width 0
			    height 0
			    border-top: 15px solid transparent
			    border-left: 0px solid white
			    border-bottom: 15px solid transparent
	& .active
		& .indicator
			left 0px
			position absolute
			top 11px
			transition(all,.4s)
			&:before
				position absolute
			    width 0
			    height 0
			    border-top: 15px solid transparent
			    border-left: 20px solid white
			    border-bottom: 15px solid transparent

	& .title
		text-align center
		margin 0px
		padding 0px
		font-size 2em
		height 50px
		line-height 50px
		& .flat-youtube
			color #B11A01
		
	& .apple5x1-button-videos
		background blue5x1-color
		padding 10px 0px

	& .android5x1-button-videos
		background green5x1-color
		padding 5px 0px
	& .wrapper
		position relative
		height 300px
		overflow hidden
		& .side
			color white
			font-size 4em
			text-align center
			line-height 300px
			z-index 2
			position absolute
			width 56px
			height 300px
			background rgba(0, 0, 0, .43)
		& .left
			top 0px
			left 0px
		& .right
			top 0px
			right 0px 
		& .container-videos
			height 320px
			width 99.99%
			box-sizing(border-box)
			background #606060
			line-height 300px
			padding-left 56px
			padding-right 79px
			white-space nowrap
			overflow-y hidden
			overflow-x auto
			& .video-item
				cursor pointer
				overflow hidden
				radius(8px,8px,8px,8px)
				margin-left 23px
				width 223px
				height 254px
				background white
				display inline-block
				vertical-align middle
				& .container-thumbnail
					radius(8px,8px,0px,0px)
					background black
					width 100%
					height 169px
					overflow hidden
					position relative
					& img 
						width 100%
					& .opacity-container
						width 100%
						background rgba(0, 0, 0, .70)
						radius(8px,8px,0px,0px)
						color white
						position absolute
						height 169px
						line-height 169px
						text-align center 
						& .fa-play-circle
							font-size 4em
						& .date 
							position absolute
							bottom -70px
							left: 6px
				& .container-title
					text-transform uppercase
					width 100%
					height 85px
					padding 0px 10px
					line-height 75px
					white-space normal
					text-align center
					box-sizing(border-box)	
					& span
						color #606060
						line-height normal
						display inline-block
						vertical-align middle
						font-size 1.2em
						overflow hidden
						max-height 65px

@media screen and (max-width:500px)
	.wrapper-videos-youtube
		& .wrapper
			& .side
				display none
				font-size 3em
			& .container-videos
				padding 0px
				padding-right 23px
/*
  termina estilo del widget de los videos de youtube
*/