@import 'grid'
@import 'fonts'
@import 'mixins'
@import 'popover'
@import 'normalize'
@import 'modal'
@import 'image'

/* variables */
colorBorde = #e7e7e7
colorBlackFont = #333333
rojoJuice = #ef0200

/* estilo general */
body
	background colorBlackFont
	font-family: 'Open Sans', arial, helvetica;
	font-size 16px
	margin 0px
	padding 0px
	image('../images/bg.jpg')
	background-repeat: no-repeat;
	background-position: top center;
	background-attachment: fixed;
	background-size: cover;	
h1,h2,h3
	margin 0px
	padding 0px

footer
	background #2e2e2e
	margin 0px
	color rgba(255,255,255,.6)
	font-weight 300
	overflow hidden
	padding 20px 0px
	box-sizing(border-box)
.field
	background transparent
	margin-right 10px
	margin-bottom 10px
	padding .5em 1em
	border 0px !important
	radius(3px,3px,3px,3px)
	font-size 1em
	box-sizing(border-box)

.field:focus
	outline 0px

.field-modal
	background white !important
	width 100%
	border 1px solid #d3d3d4 !important

.wrapper-field
	width 100%
	padding 0px 10px
	box-sizing(border-box)
	
.angular-google-map-container
	margin-left 20px
	height: 280px
	shadow(0px,3px,10px,rgba(0, 0, 0, .4))
	border 4px solid white

.blue 
	background #0f98ec !important
	&:hover
		background white !important
		color #0f98ec !important
.orange 
	background #e85b3f !important
	&:hover
		background white !important
		color #e85b3f !important
.yellow
	background #feb33b !important
	&:hover
		background white !important
		color #feb33b !important
	
/* estilo de la barra de menu */
.bar-black
	transition(all,.3s)
	background-image: -webkit-gradient(linear,70% 0,70% 100%,color-stop(0%,rgba(0,0,0,.7)),color-stop(100%,rgba(0,0,0,0)));
	background-image: -webkit-linear-gradient(top,rgba(0,0,0,.7)0,rgba(0,0,0,0)100%);
	background-image: -moz-linear-gradient(top,rgba(0,0,0,.7)0,rgba(0,0,0,0)100%);
	background-image: -o-linear-gradient(top,rgba(0,0,0,.7)0,rgba(0,0,0,0)100%);
	background-image: linear-gradient(top,rgba(0,0,0,.7)0,rgba(0,0,0,0)100%);
	position fixed
	height 100px
	z-index 1
	width 100%
	box-sizing(border-box)
	padding 0px 30px
	& .logo
		transition(all,.3s)
		margin-top 10px
		float left
		width 267px
		height 71px
		background url('../images/logo.png')
		background-size 100% 100%
	& .btn-menu
		transition(all,.3s)
		display none
		color white
		border 0px
		background transparent
		position absolute
		right 10px
		top 20px
		&:before
			font-size 1.6em
	& .menu
		transition(all,.3s)
		float right
		height 100%
		padding 20px
		box-sizing(border-box)
		& ul
			padding 0px
			list-style: none
			& li
				padding 0px 10px
				display inline-block
				vertical-align middle
				& a
					transition(all,.3s)
					font-size 1.3em
					font-weight 300
					color white
					text-decoration none
					&:hover
						radius(5px,5px,5px,5px)
						color rojoJuice
						shadow(0,1px,3px,rgba(0, 0, 0, .25))
						background white
						display block
						padding 0px 4px
.bar-white
	background rgba(255, 255, 255, .9) !important
	height 60px
	border-bottom 1px solid colorBorde
	& .logo
		margin-top 5px
		float left
		width 187px
		height 50px
		background url('../images/logo-black.png')
		background-size 100% 100%
	& .menu
		padding 0px
		& ul
			& li
				& a
					color colorBlackFont
	& .btn-menu
		display none
		color rojoJuice
		top 15px
		&:before
			font-size 1.6em

/* estilo del contenedor full page */
#fullPage
	width 100%
	margin 0px
	padding 0px
	z-index 0
	overflow hidden

/* estilo de la seccion principal */	
.mainView
	position relative
	width 100%
	& .container
		background rgba(0, 0, 0, .4)
		width 100%
		height 100%
		& .centerVertical
			margin-top 200px
		& .title
			text-shadow 0px 0px 5px rgba(0, 0, 0, .4)
			text-align center
			position: relative
			font-size 2.5em
			font-weight: 400
			color white
			margin 0px 
			padding 0px
		& .descrip
			text-shadow 0px 0px 5px rgba(0, 0, 0, .4)
			font-size 1.2em
			color white
			font-weight: 300
	& .bottom-section
		position absolute
		bottom 0px
		width 100%
		text-align center
		-webkit-animation moveArrow 2s infinite
		animation moveArrow 2s infinite
	    -webkit-animation-delay: 2s
	    animation-delay: 2s
		& a
			text-decoration none
			color white
			font-size 4em
/* estilo de la seccion de servicios */
.servicesView
	background: #eee
	text-align center
	& .serviceItem
		width 300px
		display inline-block
		vertical-align top
		margin 10px 0px
		&:hover
			cursor pointer
			background white
			shadow(0,1px,3px,rgba(0, 0, 0, .25))
			& .figure .inner-figure
				display block
		& .figure
			position relative
			overflow hidden
			margin 20px auto
			width 200px
			height 200px
			radius(50%,50%,50%,50%)			
			color rgba(0, 0, 0, .54)
			padding-top 28px
			box-sizing(border-box)
			&:before
				font-size 8em
			& .inner-figure
				display none
				width 100%
				height 100%
				color white
				padding 60px 0px
				background rgba(0, 0, 0, .8)
				position absolute
				top 0px
				box-sizing(border-box)
		& .title
			padding 0px
			line-height .2em
			font-weight 300
			font-size 1.6em
		& .descrip
			padding 0px 40px
			font-weight 300
			font-size 1em
					
/* estilo de la seccion de cursos */
.cursosView
	border-top 1px solid colorBorde
	border-bottom 1px solid colorBorde
	background: white
	overflow hidden
	& .rows
		& .left-course
			margin-bottom 30px
			& .iphone
				position relative
				top 450px
				background url('../images/course-ios.png')	
				background-size cover
				width 400px
				height 601px
				transition(all,.8s)	
			& .animate-iphone
				top 150px
				transition(all,.8s)
		& .right-course
			margin-bottom 30px
			text-align right !important
			& .title
				padding 0px
				margin-top 20px
				font-weight 300
				font-size 2em
			& .descrip
				padding 0px 0px 0px 40px
				font-weight 300
				font-size 1.1em
				
/* estilo de la seccion de contacto*/

.contactoView
	width 100%
	color white
	box-sizing(border-box)
	background rgba(230, 92, 69, .95)
	& .wrapperContact
		width 100%
		box-sizing(border-box)
		padding 0px 20px 0px 10px
		& .rows
			& .title-section
				& .line-abs
					background white
					box-shadow 0 1px 0 rgba(0,0,0,0.3)
				& .text
					text-shadow 0 1px 0 rgba(0,0,0,0.3)
					color white	
.descripContact
	font-weight 300
	
.field-contact
	background: rgba(0, 0, 0, .3)
	width 100%
	

/* estilo del Titulo de las secciones*/

.title-section
	position relative
	margin 20px 0px
	& .line-abs
		background colorBlackFont
		box-shadow 0 1px 0 rgba(255,255,255,0.75)
		height 2px
		width 80px
		display inline-block
		vertical-align middle
	& .text
		text-shadow 0 1px 0 rgba(255,255,255,0.75)
		color colorBlackFont
		font-size 2.5em
		font-weight 300
		display inline-block
		vertical-align middle

/*********************************************************
******************  estilo de los botones ****************/
.btn
	background transparent
	display inline-block
  
.btn-section
	background: rgba(255, 255, 255, .2)
	radius(50%,50%,50%,50%)
	border 1px solid rgba(255, 255, 255, .75)
	margin 0px 10px
	height 88px
	width 88px
	color white
	cursor pointer
	&:before
		font-size 3.2em
		font-weight normal !important
	&:focus 
		outline 0px
	&:hover
		background: rgba(255, 255, 255, .9)
		shadow(0px,0px,20px,white)
		border 0px solid #f96f68
		color rojoJuice

.btn-contact
	radius(4px,4px,4px,4px)
	background: rgba(255, 255, 255, .2)
	border 1px solid rgba(255, 255, 255, .75)
	margin 0px 10px
	padding 10px 20px
	color white
	cursor pointer
	&:focus 
		outline 0px
	&:hover
		background: rgba(255, 255, 255, .9)
		shadow(0px,0px,20px,white)
		border 1px solid transparent
		color rgba(230, 92, 69, .95)

.btn-form
	radius(4px,4px,4px,4px)
	border 1px solid rgba(255, 255, 255, .75)
	padding 5px 10px
	margin-top 7px
	&:focus
		outline 0px
		
.btn-course
	radius(4px,4px,4px,4px)
	border 2px solid #3487d4
	display inline-block
	color #3487d4
	padding 5px 10px
	margin-top 7px
	&:hover
		background #3487d4
		color white
		shadow(0px,0px,20px,#3487d4)
	&:focus
		outline 0px	
/*********************************************************
******************  social icons ****************/

.social 
	& a
		text-decoration none
		font-weight normal
		font-size 3em
		color rgba(255,255,255,.6)
		padding 2%
	& .twitter	
		&:hover
			color #55acee
	& .youtube	
		&:hover
			color #cc181e			
	& .facebook
		&:hover
			color #3a5d91			

/******* Animation ******/

@-webkit-keyframes moveArrow {
    0% {
    	bottom:0px
    }
    50% {
    	bottom:20px
    }
    100% {
    	bottom:0px
    }
}

/* Standard syntax */
@keyframes moveArrow {
    0% {
    	bottom:0px
    }
    50% {
    	bottom:20px
    }
    100% {
    	bottom:0px
    }
}

/*********************************************************
****************** estilo responsive *********************/

@media screen and (max-width:933px)
	.bar-black
		& .menu
			display none
			float right
			position relative
			top 60px
			right -15px
			height auto !important
			background white
			padding 0px 7px
			radius(4px,4px,4px,4px)
			border 1px solid colorBorde
			&:before
				content ''
				width: 0;
				height: 0;
				border-left: 10px solid transparent
				border-right: 10px solid transparent
				border-bottom: 10px solid colorBorde
				position: absolute
				top -11px
				right 4px
				margin-left -10px	
			&:after
				content ''
				width: 0;
				height: 0;
				border-left: 10px solid transparent
				border-right: 10px solid transparent
				border-bottom: 10px solid white
				position: absolute
				top -10px
				right 4px
				margin-left -10px			
			& ul
				& li
					display block
					padding 3px 0px
					border-bottom 1px solid colorBorde
					& a
						color colorBlackFont
	.btn-menu
		display block !important
@media screen and (max-width:680px)
	.mainView
		& .bottom-section
			display none
	.cursosView
		& .rows
			& .left-course
				position relative
				z-index 0
				& .iphone
					margin-top -500px
			& .right-course
				background rgba(255, 255, 255, .9)
				shadow(0,60px,60px,rgba(255, 255, 255, .9))
				text-align center !important
				position relative
				z-index 1
				& .descrip
					padding 0px 40px 0px 40px
	.angular-google-map-container
		margin-left 0px
		position: relative
		top 4px
	.centerVertical
		margin-top 100px !important

	.servicesView
		& .serviceItem
			cursor pointer
			background white
			shadow(0,1px,3px,rgba(0, 0, 0, .25))

@media screen and (max-width:480px)	
	.bar-black
		position absolute 
		top 0px
		left 0px
	.bar-black
		height 80px
		background white
	.btn-menu
		display block !important
		&:before
			color #ef0200
	.leftMain
		display none
	.logo
		position relative
		left -20px
		background url('../images/logo-black.png') !important
		background-size 100% 100%  !important
		width 210px !important
		height 56px !important

	.title-section
		& .text
			width 100%
			

@media screen and (max-width:389px)
	.bar-black
		& .menu
			top 0px !important